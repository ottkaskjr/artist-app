<% const removeHrefPrefix = (str) => { %>
  <% if (str.includes('-heading')) { %>
    <% str = str.replace('-heading', '') %>
  <% } else if (str.includes('-container')) { %>
    <% str = str.replace('-container', '') %>
  <% } %>
  <% return str.trim() %>
<% } %>

